generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  role     String    @default("USER") // "USER" ou "ADMIN"
  products Product[]
}

model Product {
  id       Int    @id @default(autoincrement())
  name     String
  quantity Int
  price    Float
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
}
